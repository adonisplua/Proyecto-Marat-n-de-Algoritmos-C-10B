#include <iostream>
#include <cmath>
using namespace std;

int masCercano(int arr[], int n, int x){
    int dif=abs(arr[0]-x), res=arr[0];
    for(int i=1;i<n;i++)
        if(abs(arr[i]-x)<dif){
            dif=abs(arr[i]-x);
            res=arr[i];
        }
    return res;
}

int main(){
    int arr[]={1,3,5,8,10};
    int n=5;
    int x=6;
    cout<<"Número más cercano a "<<x<<": "<<masCercano(arr,n,x);
    return 0;
}

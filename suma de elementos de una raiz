#include <iostream>
using namespace std;

int sumaMatriz(int mat[][3], int filas, int col, int i = 0, int j = 0) {
    if (i == filas) return 0;
    if (j == col) return sumaMatriz(mat, filas, col, i + 1, 0);
    return mat[i][j] + sumaMatriz(mat, filas, col, i, j + 1);
}

int main() {
    int mat[2][3] = {{1, 2, 3}, {4, 5, 6}};
    cout << "Suma de matriz: " << sumaMatriz(mat, 2, 3) << endl;
    return 0;
}

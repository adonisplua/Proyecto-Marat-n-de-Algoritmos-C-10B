#include <iostream>
#include <cmath>
using namespace std;

class Circulo {
private:
    double radio;
public:
    Circulo(double r) : radio(r) {}
    double area() { return M_PI * radio * radio; }
    double circunferencia() { return 2 * M_PI * radio; }
};

int main() {
    Circulo c(5);
    cout << "Area: " << c.area() << ", Circunferencia: " << c.circunferencia() << endl;
    return 0;
}

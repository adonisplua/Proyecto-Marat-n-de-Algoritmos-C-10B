#include <iostream>
using namespace std;

class Rectangulo {
private:
    float base, altura;
public:
    Rectangulo(float b, float a) : base(b), altura(a) {}

    float area() { return base * altura; }
    float perimetro() { return 2 * (base + altura); }
};

int main() {
    Rectangulo r(5, 3);
    cout << "Area: " << r.area() << ", Perimetro: " << r.perimetro() << endl;
    return 0;
}

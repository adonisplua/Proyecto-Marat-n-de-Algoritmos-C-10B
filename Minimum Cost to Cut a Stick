#include <iostream>
#include <vector>
#include <algorithm>
#include <climits>
using namespace std;

int minCost(int n, vector<int>& cuts){
    cuts.insert(cuts.begin(),0);
    cuts.push_back(n);
    sort(cuts.begin(),cuts.end());
    int c=cuts.size();
    vector<vector<int>> dp(c, vector<int>(c,0));
    for(int len=2; len<c; len++){
        for(int i=0; i<c-len; i++){
            int j=i+len;
            dp[i][j]=INT_MAX;
            for(int k=i+1;k<j;k++)
                dp[i][j]=min(dp[i][j],cuts[j]-cuts[i]+dp[i][k]+dp[k][j]);
        }
    }
    return dp[0][c-1];
}

int main(){
    vector<int> cuts={1,3,4,5};
    cout<<"Costo mÃ­nimo para cortar: "<<minCost(7,cuts)<<endl;
    return 0;
}

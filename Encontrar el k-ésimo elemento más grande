#include <iostream>
#include <algorithm>
using namespace std;

int kEsimoMayor(int arr[], int n, int k){
    sort(arr, arr+n, greater<int>());
    return arr[k-1];
}

int main(){
    int arr[]={7,10,4,3,20,15};
    int n=6, k=3;
    cout<<"El "<<k<<"-Ã©simo mayor es: "<<kEsimoMayor(arr,n,k);
    return 0;
}

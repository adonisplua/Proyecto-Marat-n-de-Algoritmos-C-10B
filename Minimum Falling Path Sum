#include <iostream>
#include <vector>
#include <climits>
#include <algorithm>
using namespace std;

int minFallingPathSum(vector<vector<int>>& mat){
    int n=mat.size();
    vector<vector<int>> dp=mat;
    for(int i=n-2;i>=0;i--)
        for(int j=0;j<n;j++){
            int best=dp[i+1][j];
            if(j>0) best=min(best, dp[i+1][j-1]);
            if(j<n-1) best=min(best, dp[i+1][j+1]);
            dp[i][j]+=best;
        }
    return *min_element(dp[0].begin(),dp[0].end());
}

int main(){
    vector<vector<int>> mat={{2,1,3},{6,5,4},{7,8,9}};
    cout<<"Suma mÃ­nima descendente: "<<minFallingPathSum(mat)<<endl;
    return 0;
}

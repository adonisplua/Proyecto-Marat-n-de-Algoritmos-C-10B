#include <iostream>
using namespace std;

int busquedaLineal(int arr[], int n, int x) {
    for(int i=0;i<n;i++)
        if(arr[i]==x) return i;
    return -1;
}

int main() {
    int arr[] = {2,4,6,8};
    int n=4;
    int x=6;
    int res=busquedaLineal(arr,n,x);
    cout << (res!=-1?"Encontrado en Ã­ndice ":"No encontrado") << res << endl;
    return 0;
}

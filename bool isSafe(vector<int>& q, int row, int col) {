#include <bits/stdc++.h>
using namespace std;

bool isSafe(vector<int>& q, int row, int col) {
    for(int i=0;i<row;i++)
        if(q[i]==col || abs(q[i]-col)==row-i) return false;
    return true;
}

void solve(int row, int n, vector<int>& q, int& count) {
    if(row==n){ count++; return; }
    for(int col=0;col<n;col++)
        if(isSafe(q,row,col)){ q[row]=col; solve(row+1,n,q,count); }
}

int main() {
    int n=4, count=0;
    vector<int> q(n);
    solve(0,n,q,count);
    cout << "Total soluciones N-Reinas: " << count << "\n";
}

#include <iostream>
#include <vector>
using namespace std;

void dfsLongest(vector<vector<int>>& adj, int u, vector<bool>& vis, int len, int& maxLen){
    vis[u]=true;
    maxLen=max(maxLen,len);
    for(int v: adj[u])
        if(!vis[v]) dfsLongest(adj,v,vis,len+1,maxLen);
    vis[u]=false;
}

int main(){
    vector<vector<int>> adj={{1,2},{0,2,3},{0,1,3},{1,2}};
    vector<bool> vis(adj.size(),false);
    int maxLen=0;
    dfsLongest(adj,0,vis,0,maxLen);
    cout<<"Camino mÃ¡s largo: "<<maxLen<<endl;
    return 0;
}

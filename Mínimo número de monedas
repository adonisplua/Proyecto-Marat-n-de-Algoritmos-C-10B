#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int minCoins(int coins[], int n, int amount){
    vector<int> dp(amount+1, 1e9);
    dp[0]=0;
    for(int i=1;i<=amount;i++)
        for(int j=0;j<n;j++)
            if(coins[j]<=i) dp[i]=min(dp[i], dp[i-coins[j]]+1);
    return dp[amount]==1e9?-1:dp[amount];
}

int main(){
    int coins[]={1,2,5};
    int amount=11;
    cout<<"Mínimo número de monedas para "<<amount<<": "<<minCoins(coins,3,amount)<<endl;
    return 0;
}

#include <iostream>
using namespace std;

bool esPalindromo(string s, int i, int j) {
    if (i >= j) return true;
    if (s[i] != s[j]) return false;
    return esPalindromo(s, i + 1, j - 1);
}

int main() {
    string s = "radar";
    cout << (esPalindromo(s, 0, s.length() - 1) ? "Es palÃ­ndromo" : "No es palÃ­ndromo") << endl;
    return 0;
}

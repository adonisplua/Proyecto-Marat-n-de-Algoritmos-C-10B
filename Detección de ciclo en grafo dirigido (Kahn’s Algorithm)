#include <iostream>
#include <vector>
#include <queue>
using namespace std;

bool hasCycleKahn(vector<vector<int>>& adj){
    int n=adj.size();
    vector<int> indeg(n,0);
    for(int i=0;i<n;i++)
        for(int v:adj[i]) indeg[v]++;
    queue<int> q;
    for(int i=0;i<n;i++)
        if(indeg[i]==0) q.push(i);

    int count=0;
    while(!q.empty()){
        int u=q.front(); q.pop();
        count++;
        for(int v:adj[u]){
            indeg[v]--;
            if(indeg[v]==0) q.push(v);
        }
    }
    return count!=n;
}

int main(){
    vector<vector<int>> adj={{1},{2},{3},{1}};
    cout<<"¿Tiene ciclo? "<<(hasCycleKahn(adj)?"Sí":"No")<<endl;
    return 0;
}

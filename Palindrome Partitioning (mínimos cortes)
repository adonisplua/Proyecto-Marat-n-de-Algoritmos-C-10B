#include <iostream>
#include <vector>
#include <string>
#include <climits>
using namespace std;

bool isPal(string s, int i, int j){
    while(i<j){
        if(s[i++]!=s[j--]) return false;
    }
    return true;
}

int minCuts(string s){
    int n=s.size();
    vector<int> dp(n,0);
    for(int i=0;i<n;i++){
        if(isPal(s,0,i)) dp[i]=0;
        else{
            dp[i]=INT_MAX;
            for(int j=0;j<i;j++)
                if(isPal(s,j+1,i))
                    dp[i]=min(dp[i], dp[j]+1);
        }
    }
    return dp[n-1];
}

int main(){
    string s="aab";
    cout<<"Cortes mÃ­nimos: "<<minCuts(s)<<endl;
    return 0;
}

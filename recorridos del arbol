#include <iostream>
using namespace std;

struct Nodo {
    int dato;
    Nodo* izq;
    Nodo* der;
};

Nodo* nuevoNodo(int valor) {
    return new Nodo{valor, nullptr, nullptr};
}

void insertar(Nodo*& raiz, int valor) {
    if (!raiz)
        raiz = nuevoNodo(valor);
    else if (valor < raiz->dato)
        insertar(raiz->izq, valor);
    else
        insertar(raiz->der, valor);
}

void preorden(Nodo* r) {
    if (!r) return;
    cout << r->dato << " ";
    preorden(r->izq);
    preorden(r->der);
}

void postorden(Nodo* r) {
    if (!r) return;
    postorden(r->izq);
    postorden(r->der);
    cout << r->dato << " ";
}

int main() {
    Nodo* raiz = nullptr;
    for (int v : {4, 2, 6, 1, 3, 5, 7})
        insertar(raiz, v);

    cout << "Preorden: "; preorden(raiz); cout << endl;
    cout << "Inorden: ";  insertar(raiz, 8);  // probar inserciÃ³n
    cout << endl << "Postorden: "; postorden(raiz); cout << endl;

    return 0;
}

#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int largestSquare(vector<vector<int>>& mat){
    int m=mat.size(), n=mat[0].size(), res=0;
    vector<vector<int>> dp(m, vector<int>(n,0));
    for(int i=0;i<m;i++){
        for(int j=0;j<n;j++){
            if(i==0||j==0) dp[i][j]=mat[i][j];
            else if(mat[i][j]==1)
                dp[i][j]=1+min({dp[i-1][j], dp[i][j-1], dp[i-1][j-1]});
            res=max(res, dp[i][j]);
        }
    }
    return res;
}

int main(){
    vector<vector<int>> mat={{0,1,1,0},{1,1,1,1},{0,1,1,1},{1,1,1,0}};
    cout<<"Tamaño máximo del cuadrado de 1's: "<<largestSquare(mat)<<endl;
    return 0;
}

#include <iostream>
using namespace std;

int main() {
    int x = 10;
    int* p = &x;  // p apunta a x

    cout << "Valor de x: " << x << endl;
    cout << "Direccion de x: " << &x << endl;
    cout << "Valor del puntero p (direccion): " << p << endl;
    cout << "Valor al que apunta p: " << *p << endl;
    return 0;
}

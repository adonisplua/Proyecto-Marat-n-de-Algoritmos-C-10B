#include <iostream>
using namespace std;

void cocktailSort(int arr[], int n){
    bool swapped=true;
    int start=0, end=n-1;
    while(swapped){
        swapped=false;
        for(int i=start;i<end;i++)
            if(arr[i]>arr[i+1]){
                swap(arr[i],arr[i+1]);
                swapped=true;
            }
        if(!swapped) break;
        swapped=false;
        end--;
        for(int i=end-1;i>=start;i--)
            if(arr[i]>arr[i+1]){
                swap(arr[i],arr[i+1]);
                swapped=true;
            }
        start++;
    }
}

int main(){
    int arr[]={5,1,4,2,8,0,2};
    int n=7;
    cocktailSort(arr,n);
    for(int i=0;i<n;i++) cout<<arr[i]<<" ";
    return 0;
}

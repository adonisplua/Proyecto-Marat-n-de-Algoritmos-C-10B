#include <iostream>
using namespace std;

int main() {
    int numero, contador = 0;
    cout << "Ingrese un número: ";
    cin >> numero;

    if (numero == 0) contador = 1;

    while (numero != 0) {
        numero /= 10;
        contador++;
    }

    cout << "El número tiene " << contador << " dígitos." << endl;
    return 0;
}

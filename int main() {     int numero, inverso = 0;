#include <iostream>
using namespace std;

int main() {
    int numero, inverso = 0;
    cout << "Ingrese un número: ";
    cin >> numero;

    while (numero != 0) {
        inverso = inverso * 10 + numero % 10;
        numero /= 10;
    }

    cout << "Número invertido: " << inverso << endl;
    return 0;
}

#include <bits/stdc++.h>
using namespace std;
int main(){
    int n=4;
    vector<vector<pair<int,int>>> g(n);
    g[0]={{1,1},{2,4}}; g[1]={{0,1},{2,2}}; g[2]={{0,4},{1,2},{3,3}}; g[3]={{2,3}};
    vector<bool> vis(n,false);
    priority_queue<pair<int,int>,vector<pair<int,int>>,greater<>> pq;
    pq.push({0,0}); int cost=0;
    while(!pq.empty()){
        auto [w,u]=pq.top(); pq.pop();
        if(vis[u]) continue; vis[u]=true; cost+=w;
        for(auto &[v,ww]:g[u]) if(!vis[v]) pq.push({ww,v});
    }
    cout<<"Costo MST: "<<cost<<"\n";
}

#include <iostream>
using namespace std;

int busquedaLinealOrdenada(int arr[], int n, int x){
    for(int i=0;i<n;i++){
        if(arr[i]==x) return i;
        if(arr[i]>x) break; // como está ordenado, podemos salir temprano
    }
    return -1;
}

int main(){
    int arr[]={1,3,5,7,9};
    int n=5;
    int x=5;
    int res = busquedaLinealOrdenada(arr,n,x);
    cout << (res!=-1 ? "Encontrado en índice " : "No encontrado") << res << endl;
    return 0;
}

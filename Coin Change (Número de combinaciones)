#include <iostream>
#include <vector>
using namespace std;

int coinChangeWays(int coins[], int n, int amount){
    vector<int> dp(amount+1,0);
    dp[0]=1;
    for(int i=0;i<n;i++)
        for(int j=coins[i];j<=amount;j++)
            dp[j]+=dp[j-coins[i]];
    return dp[amount];
}

int main(){
    int coins[]={1,2,5};
    cout<<"Formas de hacer 5: "<<coinChangeWays(coins,3,5)<<endl;
    return 0;
}

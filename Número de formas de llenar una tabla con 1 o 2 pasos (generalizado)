#include <iostream>
#include <vector>
using namespace std;

int countWays(int n, int k){
    vector<int> dp(n+1,0);
    dp[0]=1;
    for(int i=1;i<=n;i++)
        for(int j=1;j<=k;j++)
            if(i-j>=0) dp[i]+=dp[i-j];
    return dp[n];
}

int main(){
    cout<<"Formas de llegar al paso 5 con saltos hasta 3: "<<countWays(5,3)<<endl;
    return 0;
}

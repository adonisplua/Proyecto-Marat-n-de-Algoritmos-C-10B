#include <iostream>
using namespace std;

void ordenarPorColumna(int mat[][3], int filas, int col){
    for(int i=0;i<filas-1;i++){
        int min_idx=i;
        for(int j=i+1;j<filas;j++)
            if(mat[j][col]<mat[min_idx][col]) min_idx=j;
        for(int k=0;k<3;k++) swap(mat[i][k], mat[min_idx][k]);
    }
}

int main(){
    int mat[3][3]={{3,2,1},{6,5,4},{9,8,7}};
    ordenarPorColumna(mat,3,1); // orden por columna 1
    for(int i=0;i<3;i++){
        for(int j=0;j<3;j++) cout<<mat[i][j]<<" ";
        cout<<endl;
    }
    return 0;
}

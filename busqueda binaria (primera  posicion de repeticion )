#include <iostream>
using namespace std;

int primeraPosicion(int arr[], int n, int x){
    int low=0, high=n-1, res=-1;
    while(low<=high){
        int mid=low+(high-low)/2;
        if(arr[mid]==x){
            res=mid;
            high=mid-1;
        }
        else if(arr[mid]<x) low=mid+1;
        else high=mid-1;
    }
    return res;
}

int main(){
    int arr[]={1,2,2,2,3};
    int n=5;
    int x=2;
    cout<<"Primera posiciÃ³n: "<<primeraPosicion(arr,n,x)<<endl;
    return 0;
}

#include <iostream>
#include <vector>
#include <string>
using namespace std;

int longestCommonSubstring(string X, string Y){
    int m=X.size(), n=Y.size(), res=0;
    vector<vector<int>> dp(m+1, vector<int>(n+1,0));
    for(int i=1;i<=m;i++)
        for(int j=1;j<=n;j++)
            if(X[i-1]==Y[j-1]){
                dp[i][j]=dp[i-1][j-1]+1;
                res=max(res,dp[i][j]);
            }
    return res;
}

int main(){
    cout<<"LCS (subcadena) = "<<longestCommonSubstring("ABABC","BABCAB")<<endl;
    return 0;
}

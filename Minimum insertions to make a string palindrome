#include <iostream>
#include <vector>
#include <string>
#include <algorithm>
using namespace std;

int minInsertions(string s){
    string r=s;
    reverse(r.begin(),r.end());
    int n=s.size();
    vector<vector<int>> dp(n+1, vector<int>(n+1,0));
    for(int i=1;i<=n;i++)
        for(int j=1;j<=n;j++)
            dp[i][j]=(s[i-1]==r[j-1])? dp[i-1][j-1]+1 : max(dp[i-1][j], dp[i][j-1]);
    return n - dp[n][n];
}

int main(){
    cout<<"MÃ­nimas inserciones: "<<minInsertions("mbadm")<<endl;
    return 0;
}

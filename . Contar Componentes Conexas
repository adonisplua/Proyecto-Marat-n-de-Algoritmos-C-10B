#include <iostream>
#include <vector>
using namespace std;

void dfs(int v, vector<vector<int>>& adj, vector<bool>& vis){
    vis[v]=true;
    for(int u: adj[v])
        if(!vis[u]) dfs(u,adj,vis);
}

int countComponents(vector<vector<int>>& adj){
    int count=0;
    vector<bool> vis(adj.size(),false);
    for(int i=0;i<adj.size();i++)
        if(!vis[i]){
            dfs(i,adj,vis);
            count++;
        }
    return count;
}

int main(){
    vector<vector<int>> adj={{1},{0},{3},{2}};
    cout<<"Componentes conectadas: "<<countComponents(adj)<<endl;
    return 0;
}

#include <bits/stdc++.h>
using namespace std;
void dfs(int u,vector<vector<int>>& g,vector<bool>& vis){ vis[u]=true; for(int v:g[u]) if(!vis[v]) dfs(v,g,vis); }
int main(){
    int n=5; vector<vector<int>> g={{1},{0,2},{1},{4},{3}}; vector<bool> vis(n,false); int count=0;
    for(int i=0;i<n;i++) if(!vis[i]){ dfs(i,g,vis); count++; }
    cout<<"Componentes: "<<count<<"\n";
}

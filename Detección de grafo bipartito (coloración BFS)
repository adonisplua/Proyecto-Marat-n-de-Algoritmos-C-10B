#include <iostream>
#include <vector>
#include <queue>
using namespace std;

bool isBipartite(vector<vector<int>>& adj){
    int n=adj.size();
    vector<int> color(n,-1);
    for(int i=0;i<n;i++){
        if(color[i]==-1){
            queue<int> q;
            q.push(i);
            color[i]=0;
            while(!q.empty()){
                int v=q.front(); q.pop();
                for(int u: adj[v]){
                    if(color[u]==-1){
                        color[u]=1-color[v];
                        q.push(u);
                    } else if(color[u]==color[v])
                        return false;
                }
            }
        }
    }
    return true;
}

int main(){
    vector<vector<int>> adj={{1,3},{0,2},{1,3},{0,2}};
    cout<<"¿Es bipartito? "<<(isBipartite(adj)?"Sí":"No")<<endl;
    return 0;
}

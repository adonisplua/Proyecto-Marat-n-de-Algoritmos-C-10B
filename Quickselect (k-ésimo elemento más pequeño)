#include <iostream>
using namespace std;

int partition(int arr[], int l, int r){
    int pivot=arr[r], i=l;
    for(int j=l;j<r;j++){
        if(arr[j]<=pivot){
            swap(arr[i], arr[j]);
            i++;
        }
    }
    swap(arr[i], arr[r]);
    return i;
}

int quickSelect(int arr[], int l, int r, int k){
    if(l<=r){
        int pi=partition(arr,l,r);
        if(pi==k) return arr[pi];
        else if(pi>k) return quickSelect(arr,l,pi-1,k);
        else return quickSelect(arr,pi+1,r,k);
    }
    return -1;
}

int main(){
    int arr[]={7,10,4,3,20,15};
    int n=6, k=3;
    cout<<"3-ésimo elemento más pequeño: "<<quickSelect(arr,0,n-1,k-1);
    return 0;
}
